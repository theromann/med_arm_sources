- @movement = ProductMovement.new
- @movement.product_storage_relations.build
#form-for-product-movement
  %h3.title
    = l('product_movement.new')
  = render partial: 'products/form_scripts_and_styles'
  = semantic_form_for @movement do |f|
    = f.semantic_fields_for :product_storage_relations do |rel|
      = render 'product_movements/product_storage_relation_fields', :f => rel
    = f.submit l('product_movement.save'), id: 'product-movement-submit'
