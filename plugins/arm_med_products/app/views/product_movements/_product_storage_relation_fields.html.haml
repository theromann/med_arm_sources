= javascript_include_tag :products, plugin: :arm_med_products

.nested-fields.one-product-movement
  .product_movement_header
    = f.input :time, as: :date_with_calendar
  .movement_line
    .movement_from
      = f.input :product_storage_from, input_html: { :class => 'select2 movement_from_select' }
    .movement_to
      = f.input :product_storage_to, input_html: { :class => 'select2 movement_to_select' }
  .product_movement_line
    .product
      = f.input :product, input_html: { :class => 'select2 movement_product_select' }, label: :status_id, :include_blank => false
    .maintainer
      = f.input :maintainer, input_html: { :class => 'select2 movement_maintainer', value: User.current }
    .count
      = f.input :count, :input_html => { :size => 10 }
  .movement_note
    = f.input :note, :input_html => { :class => 'autogrow movement_note', :rows => 2, :cols => 69 }
  = link_to_remove_association l('product_storage_relation.link_to_remove'), f
