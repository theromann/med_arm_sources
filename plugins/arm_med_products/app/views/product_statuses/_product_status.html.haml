- product_statuses ||=  local_assigns[:product_statuses].reject{|a| a.strip==''}
- checked_groups ||= local_assigns[:checked_groups]
- product_statuses.each do |status|
  - resource_id = status
  - node_status = checked_groups.include? resource_id
  - unless status.to_s.strip == ''
    %tr
      %td= check_box_tag 'product_status_names[]', status, node_status, form: 'search-form'
      %td
        %span.group-name= status